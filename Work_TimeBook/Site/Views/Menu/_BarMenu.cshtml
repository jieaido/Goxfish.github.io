
@model IEnumerable<Entity.Model.MenuEntity>


    <ul id="main-nav" class="nav nav-tabs nav-stacked" style="">
        <li class="active">
            <a href="#">
                <i class="glyphicon glyphicon-th-large"></i>
                首页
            </a>
        </li>
        @foreach (var s in Model)
        {
            if (s.ParentMenuId == -1)
            {
                <li>
                    <a href="#" class="nav-header collapsed text-center" data-toggle="collapse" data-target="#@s.MenuEntityId">
                        <i class="glyphicon glyphicon-cog"></i>
                        @s.MenuDisplayName
                        <span class="pull-right glyphicon glyphicon-chevron-down"></span>
                    </a>


                    <ul id="@s.MenuEntityId" class="nav nav-list collapse secondmenu" data-parent="@s.MenuEntityId" style="height: 0px;">

                        @foreach (var t in Model)
                    {
                        if (t.ParentMenuId == s.MenuEntityId)
                        {
                                <li><a href="@Url.Action(t.ActionName,t.ControllerName)"><i class="glyphicon glyphicon-user"></i>@t.MenuDisplayName</a></li>
                            }
                        }


                    </ul>
                </li>
                
